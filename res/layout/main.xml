<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<RelativeLayout
	    android:id="@+id/contents"
	    android:layout_width="500px"
	    android:layout_height="500px"
	    android:layout_gravity="center" >
	
	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="fill_parent"
	        android:layout_height="100px"
	        android:layout_marginBottom="30px"
	        android:gravity="right|center_vertical"
	        android:inputType="numberDecimal"
	        android:singleLine="true"
	        android:textSize="40px"
	        android:textStyle="bold" >
	
	        <requestFocus />
	    </EditText>
	
        <Button
            android:id="@+id/buttonClear"
            style="@style/button"
            android:layout_below="@id/editText1"
            android:layout_alignRight="@id/editText1"
            android:text="CLEAR" />
	
        <Button
            android:id="@+id/button7"
            style="@style/button"
            android:layout_below="@id/buttonClear"
            android:layout_alignParentLeft="true"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/button"
            android:layout_toRightOf="@id/button7"
            android:layout_alignBaseline="@id/button7"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/button"
            android:layout_toRightOf="@id/button8"
            android:layout_alignBaseline="@id/button8"
            android:text="9" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/button"
            android:layout_toRightOf="@id/button9"
            android:layout_alignBaseline="@id/button9"
            android:text="รท" />
		
        <Button
            android:id="@+id/button4"
            style="@style/button"
            android:layout_below="@id/button7"
            android:layout_alignParentLeft="true"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/button"
            android:layout_toRightOf="@id/button4"
            android:layout_alignBaseline="@id/button4"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/button"
            android:layout_toRightOf="@id/button5"
            android:layout_alignBaseline="@id/button5"
            android:text="6" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/button"
            android:layout_toRightOf="@id/button6"
            android:layout_alignBaseline="@id/button6"
            android:text="X" />

        <Button
            android:id="@+id/button1"
            style="@style/button"
            android:layout_below="@id/button4"
            android:layout_alignParentLeft="true"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/button"
            android:layout_toRightOf="@id/button1"
            android:layout_alignBaseline="@id/button1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/button"
            android:layout_toRightOf="@id/button2"
            android:layout_alignBaseline="@id/button2"
            android:text="3" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/button"
            android:layout_toRightOf="@id/button3"
            android:layout_alignBaseline="@id/button3"
            android:text="-" />
	
        <Button
            android:id="@+id/buttonDecimal"
            style="@style/button"
            android:layout_below="@id/button1"
            android:layout_alignParentLeft="true"
            android:text="." />

        <Button
            android:id="@+id/button0"
            style="@style/button"
            android:layout_toRightOf="@id/buttonDecimal"
            android:layout_alignBaseline="@id/buttonDecimal"
            android:text="0" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/button"
            android:layout_toRightOf="@id/button0"
            android:layout_alignBaseline="@id/button0"
            android:text="=" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/button"
            android:layout_toRightOf="@id/buttonEquals"
            android:layout_alignBaseline="@id/buttonEquals"
            android:text="+" />
	
	</RelativeLayout>
	
</FrameLayout>